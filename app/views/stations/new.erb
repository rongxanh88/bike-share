
<h1>Station Editor</h1><br/>

<form action="/stations" method="post">
  <!-- <input type="hidden" name="_method" value="post"/> -->
  <h4>Create New Station</h4>
  <div class="input-group">
    <input type="text" name="station[name]" class="form-control" placeholder="Station name" id="station_name_input" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="station[latitude]" class="form-control" placeholder="Latitude" id="station_latitude_input" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="station[longitude]" class="form-control" placeholder="Longitude" id="station_longitude_input" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="station[dock_count]" class="form-control" placeholder="Dock Count" id="station_dock_count_input" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="station[installation_date]" class="form-control" placeholder="Installation date" id="station_installation_date_input" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <div class="input-group-addon">
      <% @cities.each do |city| %>
        <div class="radio">
          <label><input type="radio" value="<%= city.name %>" name="city" aria-label="<%= city.name %>"><%= city.name %></label>
        </div>
      <% end %>
    </div>
  </div>
  <input type="submit" value="submit" class="btn btn-default">
</form>
