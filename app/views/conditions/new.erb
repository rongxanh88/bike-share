
<h1>Create New Condition</h1><br/>

<form action="/conditions" method="post">
  <!-- <input type="hidden" name="_method" value="post"/> -->
  <h4>Create New Condition</h4>
  <div class="input-group">
    <input type="text" name="condition[date]" class="form-control" placeholder="Date" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="condition[max_temp]" class="form-control" placeholder="Max Temperature" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="condition[mean_temp]" class="form-control" placeholder="Mean Temperature" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="condition[min_temp]" class="form-control" placeholder="Minimum Temperature" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="condition[mean_humidity]" class="form-control" placeholder="Mean Humidity" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="condition[mean_visibility]" class="form-control" placeholder="Mean Visibility" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="condition[mean_wind_speed]" class="form-control" placeholder="Mean Wind Speed" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <input type="text" name="condition[precipitation]" class="form-control" placeholder="Precipitation" aria-describedby="basic-addon3">
  </div>
  <div class="input-group">
    <div class="input-group-addon">
      <% @cities.each do |city| %>
        <div class="radio">
          <label><input type="radio" value="<%= city.name %>" name="city" aria-label="<%= city.name %>"><%= city.name %></label>
        </div>
      <% end %>
    </div>
  </div>
  <input type="submit" value="submit" class="btn btn-default">
</form>
